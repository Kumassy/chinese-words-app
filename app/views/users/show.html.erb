<div id="users">
<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<% provide(:title, @user.username) %>
<section class="mdl-shadow--2dp">
<h1>My page (<%= @user.username %>)</h1>
	<h3>Profile</h3>
	<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
		<tr>
			<th>id</th>
			<td><%= @user.id %></td>
		</tr>
		<tr>
			<th>username</th>
			<td><%= @user.username %></td>
		</tr>
		<tr>
			<th>email</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>sign_in_count</th>
			<td><%= @user.sign_in_count %></td>
		</tr>
	</table>
</section>

<section class="mdl-shadow--2dp">
	<h3>Fav List</h3>
	<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
		<thead>
			<tr>
		        <th class="mdl-data-table__cell--non-numeric">id</th>
		        <th class="mdl-data-table__cell--non-numeric">pinnin</th>
		        <th class="mdl-data-table__cell--non-numeric">kantaiji</th>
		        <th class="mdl-data-table__cell--non-numeric">imi</th>
		        <th class="mdl-data-table__cell--non-numeric">hinshi</th>
		        <th>page</th>
		        <th>section</th>
		    </tr>
	    </thead>
	    <tbody>
		    <!-- yield -->
		    <% @user.words.each do |word| %>
		    <tr>
		    	<td class="mdl-data-table__cell--non-numeric"><%= word.id %></td>
		    	<td class="mdl-data-table__cell--non-numeric"><%= word.pinnin %></td>
		        <td class="mdl-data-table__cell--non-numeric"><%= word.kantaiji %></td>
		        <td class="mdl-data-table__cell--non-numeric"><%= word.imi %></td>
		        <td class="mdl-data-table__cell--non-numeric"><%= word.hinshi %></td>
		        <td><%= word.page %></td>
		        <td><%= word.section %></td>
		    </tr>
		    <% end %>
	    </tbody>
	    
	</table>
	<div class="action">
	  	<%= link_to "edit",user_path(@user.id) %>
	  </div>
</section>

</div>